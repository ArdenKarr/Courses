//Дана прямоуголная матрица nxm. Найти строки с наибольшей и наименьшей суммой элементов. 
Вывести на печать найденные строки и суммы их элементов. Предполагается, что такие строки есть и единственны.
#include <iostream>

using namespace std;

int find_max(int **numbers, int n, int m)
{
    int max = 0;
    int coordinate = 1;
    int summ = 0;
    for (int j = 0; j < m; j++)
    {
        max += numbers[0][j];
    }
    for (int i = 1; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            summ += numbers[i][j];
        }
        if (max < summ)
        {
            max = summ;
            coordinate = i + 1;
        }
        summ = 0;
    }
    return coordinate;
}

int find_min(int **numbers, int n, int m)
{
    int min = 0;
    int coordinate = 1;
    int summ = 0;
    for (int j = 0; j < m; j++)
    {
        min += numbers[0][j];
    }
    for (int i = 1; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            summ += numbers[i][j];
        }
        if (min > summ)
        {
            min = summ;
            coordinate = i + 1;
        }
        summ = 0;
    }
    return coordinate;
}

int main()
{
    int n, m;
    int summ = 0;
    cin >> n >> m;
    int **numbers = new int*[n];
    for (int i = 0; i < n; i++)
    {
        numbers[i] = new int[m];
    }
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++)
            cin >> numbers[i][j];
    int max, min;
    max = find_max(numbers, n, m);
    min = find_min(numbers, n, m);
    cout << "coordinate of max: " << max << endl;
    for (int j = 0; j < m; j++)
        summ += numbers[max - 1][j];
    cout << "max: " << summ << endl;
    summ = 0;
    cout << "coordinate of min: " << min << endl;
    for (int j = 0; j < m; j++)
        summ += numbers[min - 1][j];
    cout << "min: " << summ << endl;
    for (int i = 0; i < n; i++)
        delete [] numbers[i];
    return 0;
}
